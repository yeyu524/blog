//Java
public class MainApplication {
    public static void main(String[] args) {
        int n = 100;
        for (int i = 0; i < n; i++) {
            for(int j=0;j<i;j++){
                System.out.print(" ");
            }

            for(int j=0;j<n-i;j++){
                System.out.print("* ");
            }
            if (i < n - 1) {
                System.out.print("\n");
            } else {

            }
        }
    }
}


//C语言
#include<stdio.h>
int main(void) {
	int n = 4;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < i; j++) {
			printf(" ");
		}

		for (int j = 0; j < n - i; j++) {
			printf("* ");
		}

		if (i < 3) {
			printf("\n");
		}
		else {
			return 0;
		}
	}
	return 0;
}



